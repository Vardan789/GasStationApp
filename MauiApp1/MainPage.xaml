<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="Black"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30">

            <!-- Slider Bar (Product Pills) -->
            <CollectionView ItemsSource="{Binding Products}"
                            ItemsLayout="HorizontalList"
                            HeightRequest="100"
                            SelectionMode="Single"
                            HorizontalScrollBarVisibility="Never">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#444"
                                WidthRequest="100"
                                StrokeThickness="2"
                                Background="#1a1a1a"
                                StrokeShape="RoundRectangle 20"
                                Padding="10"
                                Margin="10">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding Title}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="14"/>
                                <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                       TextColor="Gray"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Stations Header -->
            <Label Text="Nearby Stations"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <!-- Stations List -->
            <CollectionView ItemsSource="{Binding Stations}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="6"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#444"
                                StrokeThickness="1"
                                Background="#1a1a1a"
                                StrokeShape="RoundRectangle 20"
                                Padding="10"
                                Margin="5">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Image Source="{Binding Image}"
                                       WidthRequest="120"
                                       Aspect="AspectFill"
                                       HeightRequest="120"/>
                                <Label Text="{Binding Title}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="White"/>
                                <Label Text="{Binding Address}"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#CCCCCC"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
