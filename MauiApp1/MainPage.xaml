<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="Black"
             Title="Home"
             Shell.TitleColor="Gainsboro"
             Shell.ForegroundColor="Gainsboro"
             Shell.BackgroundColor="Black">

    <Grid>
        <!-- Background Image -->
        <Image Source="shell.jpg"
               Aspect="AspectFill"
               Opacity="0.3"
               IsVisible="True"/>

        <!-- Foreground Content -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="30">

                <!-- Welcome Banner with Background Image -->
                <Grid HeightRequest="400" WidthRequest="1200">
                    <Image Source="gasstationphoto.jpeg"
                           Aspect="AspectFill"
                           Opacity="0.5"/>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="10">
                        <Image Source="fuel_icon.png" HeightRequest="28" WidthRequest="28"/>
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="Welcome – Your Smart Way to Find"
                                   TextColor="Gainsboro"
                                   FontSize="45"
                                   FontFamily="Arial"
                                   HorizontalTextAlignment="Center"/>
                            <Label Text="and Purchase Quality Fuel Stations"
                                   TextColor="Gainsboro"
                                   FontSize="40"
                                   FontFamily="Arial"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Fuel Products Banner -->
                <Grid HeightRequest="100">
                    <Image Source="station_background.jpg"
                           Aspect="AspectFill"
                           Opacity="0.5"/>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="10">
                        <Image Source="fuel_icon.png" HeightRequest="26" WidthRequest="26"/>
                        <Label Text="Fuel Products"
                               TextColor="Gainsboro"
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="Arial"/>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Slider Bar (Product Pills) -->
                <ScrollView Orientation="Horizontal"
                            HorizontalScrollBarVisibility="Never"
                            HeightRequest="100">
                    <FlexLayout Direction="Row"
                                AlignItems="Center"
                                BindableLayout.ItemsSource="{Binding Products}"
                                Wrap="NoWrap"
                                Padding="10,0">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#444"
                                        WidthRequest="130"
                                        HeightRequest="100"
                                        StrokeThickness="2"
                                        Background="#1a1a1a"
                                        StrokeShape="RoundRectangle 20"
                                        Padding="10"
                                        Margin="10,0">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnProductTapped" />
                                    </Border.GestureRecognizers>

                                    <VerticalStackLayout Spacing="2" VerticalOptions="CenterAndExpand">
                                        <Label Text="{Binding Title}"
                                               TextColor="Gainsboro"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               HorizontalTextAlignment="Center"/>
                                        <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                               TextColor="Gray"
                                               FontSize="12"
                                               HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>

                <!-- Nearby Stations Banner with Background Image -->
                <Grid HeightRequest="100">
                    <Image Source="station_background.jpg"
                           Aspect="AspectFill"
                           Opacity="0.5"/>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="10">
                        <Image Source="station_icon.png" HeightRequest="26" WidthRequest="26"/>
                        <Label Text="Nearby Stations"
                               TextColor="Gainsboro"
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="Arial"/>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Stations Grid -->
                <CollectionView ItemsSource="{Binding Stations}" MaximumWidthRequest="1700"
                                SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                         Span="4"
                                         HorizontalItemSpacing="30"
                                         VerticalItemSpacing="30"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#444"
                                    Background="#1a1a1a"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 20"
                                    Padding="5"
                                    Margin="5">
                                <VerticalStackLayout Spacing="10"
                                                     HorizontalOptions="Center"
                                                     WidthRequest="150">
                                    <Image Source="{Binding Image}"
                                           WidthRequest="300"
                                           HeightRequest="105"
                                           Aspect="AspectFill"/>
                                    <Label Text="{Binding Title}"
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"
                                           TextColor="Gainsboro"/>
                                    <Label Text="{Binding Address}"
                                           FontSize="10"
                                           HorizontalTextAlignment="Center"
                                           TextColor="#CCCCCC"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
