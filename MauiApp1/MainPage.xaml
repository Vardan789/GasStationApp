<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="Black"
             Title="Home"
             Shell.TitleColor="Gainsboro"
             Shell.ForegroundColor="Gainsboro"
             Shell.BackgroundColor="Black">

    <Grid>
        <!-- Background Image -->
        <Image Source="asd.jpg"
               Aspect="AspectFill"
               Opacity="0.6"
               IsVisible="True"/>

        <!-- Foreground Content -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="30">

                <!-- Welcome Banner with Background Image -->
                <Grid x:Name="MainBannerGridLayout"
                      HeightRequest="400"
                      WidthRequest="1200"
                      BackgroundColor="Black">
                    <Image Source="banner.jpeg"
                           Aspect="AspectFill"
                           Opacity="1"
                           InputTransparent="True"/> 
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="6">
                            <Label x:Name="MainBannerFontSize" 
                                   HorizontalTextAlignment="Center"
                                   FontSize="48"
                                   FontFamily="Arial"
                                   TextColor="White"
                                   FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span TextColor="White" />
                                        <Span Text="Welcome – " />
                                        <Span Text="Your Smart Way to Find" FontAttributes="Italic" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label x:Name="MainBannerFontLabel"
                                   HorizontalTextAlignment="Center"
                                   FontSize="42"
                                   FontFamily="Arial"
                                   TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="and Purchase " FontAttributes="Bold"/>
                                        <Span Text="Quality Fuel Stations" FontAttributes="Bold" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Grid>


                <!-- Fuel Products Banner -->
                <Grid HeightRequest="100">
                    <Image Source="station_background.jpg"
                           Aspect="AspectFill"
                           Opacity="0.5"/>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="10">
                        <Image Source="fuel_icon.png" HeightRequest="26" WidthRequest="26"/>
                        <Label Text="Fuel Products"
                               TextColor="White"
                               FontSize="26"
                               FontAttributes="Bold"
                               FontFamily="Arial"/>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Slider Bar (Product Pills) -->
                <ScrollView Orientation="Horizontal"
                            HorizontalScrollBarVisibility="Never"
                            HeightRequest="120">
                    <FlexLayout Direction="Row"
                                AlignItems="Center"
                                BindableLayout.ItemsSource="{Binding Products}"
                                Wrap="NoWrap"
                                Padding="10,0">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid WidthRequest="130" HeightRequest="100" Margin="10,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Yellow Top Banner with Image -->
                                    <Border Grid.Row="0"
                                            BackgroundColor="Gold"
                                            StrokeShape="RoundRectangle 20,20,0,0"
                                            StrokeThickness="0">
                                        <Image Source="icon.jpeg" HeightRequest="50" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    </Border>

                                    <!-- Black Content -->
                                    <Border Grid.Row="1"
                                            BackgroundColor="#1a1a1a"
                                            Stroke="#444"
                                            StrokeShape="RoundRectangle 0,0,20,20"
                                            StrokeThickness="1"
                                            Padding="10">
                                        <VerticalStackLayout Spacing="4" VerticalOptions="CenterAndExpand">
                                            <Label Text="{Binding Title}"
                                                   TextColor="Gold"
                                                   FontAttributes="Bold"
                                                   FontSize="16"
                                                   HorizontalTextAlignment="Center"/>
                                            <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                                   TextColor="Gray"
                                                   FontSize="12"
                                                   HorizontalTextAlignment="Center"/>
                                        </VerticalStackLayout>
                                    </Border>

                                    <!-- Gesture Recognizer -->
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnProductTapped" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>

                <!-- Nearby Stations Banner with Background Image -->
                <Grid HeightRequest="100">
                    <Image Source="station_background.jpg"
                           Aspect="AspectFill"
                           Opacity="0.5"/>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Spacing="10">
                        <Image Source="station_icon.png" HeightRequest="26" WidthRequest="26"/>
                        <Label Text="Stations"
                               TextColor="White"
                               FontSize="26"
                               FontAttributes="Bold"
                               FontFamily="Arial"/>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Stations Grid -->
                <CollectionView   ItemsSource="{Binding Stations}" MaximumWidthRequest="1700"
                                 SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout x:Name="StationsGridLayout" Orientation="Vertical"
                                         Span="4"
                                         HorizontalItemSpacing="30"
                                         VerticalItemSpacing="30"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#444"
                                    Background="#1a1a1a"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 20"
                                    Padding="5"
                                    Margin="5">
                                <VerticalStackLayout Spacing="10"
                                                     HorizontalOptions="Center"
                                                     WidthRequest="150">
                                    <Image Source="{Binding Image}"
                                           WidthRequest="300"
                                           HeightRequest="105"
                                           Aspect="AspectFill"/>
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"
                                           TextColor="Gainsboro"/>
                                    <Label Text="{Binding Address}"
                                           FontSize="14"
                                           HorizontalTextAlignment="Center"
                                           TextColor="#CCCCCC"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
