<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CustomPage"
             BackgroundColor="Black"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30">

            <!-- Slider Bar (Product Pills) -->
            <ScrollView Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="10">
                    <CollectionView ItemsSource="{Binding Products}"
                                    ItemsLayout="HorizontalList"
                                    HeightRequest="60"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#1A1A1A"
                                       Padding="15,10"
                                       CornerRadius="20"
                                       HasShadow="False"
                                       BorderColor="Gray"
                                       VerticalOptions="Center">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Title}"
                                               TextColor="White"
                                               FontAttributes="Bold"
                                               FontSize="14"/>
                                        <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                               TextColor="Gray"
                                               FontSize="12"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Stations Header -->
            <Label Text="Nearby Stations"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Stations List -->
            <CollectionView ItemsSource="{Binding Stations}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1a1a1a"
                               CornerRadius="20"
                               Padding="10"
                               Margin="0,10"
                               HasShadow="True">
                            <Grid ColumnDefinitions="100,*">
                                <Image Source="{Binding Image}"
                                       WidthRequest="100"
                                       HeightRequest="100"
                                       Aspect="AspectFill"/>
                                <VerticalStackLayout Grid.Column="1"
                                                     Padding="10,0"
                                                     Spacing="5"
                                                     VerticalOptions="Center">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="{Binding Address}"
                                           FontSize="14"
                                           TextColor="#CCCCCC"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
