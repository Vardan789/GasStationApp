<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SignUpPage"
             Title="Sign Up"
             BackgroundColor="Black">

    <!-- Background Image -->
    <Grid>
        <Image Source="login.jpeg"
               Aspect="AspectFill"
               Opacity="0.4" />

        <ScrollView>
            <Grid Padding="30" VerticalOptions="CenterAndExpand">
                <Frame BackgroundColor="#1E1E1E"
                       CornerRadius="25"
                       Padding="30"
                       HasShadow="True"
                       WidthRequest="350">

                    <VerticalStackLayout Spacing="20">

                        <!-- Title -->
                        <Label Text="Sign Up"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#FACC15"
                               HorizontalOptions="Center" />

                        <!-- Username -->
                        <Frame BackgroundColor="#2C2C2C"
                               CornerRadius="10"
                               HeightRequest="50"
                               Padding="10"
                               BorderColor="#444">
                            <Entry x:Name="NewUsernameEntry"
                                   Placeholder="Username"
                                   TextColor="Gainsboro"
                                   PlaceholderColor="#888"
                                   BackgroundColor="Transparent"
                                   FontSize="18"
                                   HorizontalTextAlignment="Center" />
                        </Frame>

                        <!-- Password -->
                        <Frame BackgroundColor="#2C2C2C"
                               CornerRadius="10"
                               HeightRequest="50"
                               Padding="10"
                               BorderColor="#444">
                            <Entry x:Name="NewPasswordEntry"
                                   Placeholder="Password"
                                   IsPassword="True"
                                   TextColor="Gainsboro"
                                   PlaceholderColor="#888"
                                   BackgroundColor="Transparent"
                                   FontSize="18"
                                   HorizontalTextAlignment="Center" />
                        </Frame>

                        <!-- Sign Up Button -->
                        <Button Text="Sign Up"
                                FontSize="18"
                                Clicked="OnSignUpClicked"
                                BackgroundColor="#FACC15"
                                TextColor="Black"
                                FontAttributes="Bold"
                                CornerRadius="15"
                                HeightRequest="50" />

                        <!-- Go to Login -->
                        <Button Text="Already have an account? Login"
                                Clicked="OnNavigateToLoginClicked"
                                BackgroundColor="Transparent"
                                TextColor="LightGray"
                                FontSize="14"
                                HorizontalOptions="Center" />

                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
